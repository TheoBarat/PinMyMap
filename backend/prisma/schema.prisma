datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  visits    Visit[]  // Relation avec les visites de pays
}

model Country {
  id        Int       @id @default(autoincrement())
  name      String    // Nom du pays (e.g., "France")
  code      String    @unique // Code ISO à trois lettres (e.g., "FRA")
  continent String?   // Optionnel : Continent du pays
  population Int?     // Optionnel : Population estimée
  visits    Visit[]   // Relation avec les visites pour chaque utilisateur
}

model Visit {
  id          Int       @id @default(autoincrement())
  status      String    // Statut de la visite: "visited" ou "wishlist" (à visiter)
  description String?   // Description facultative du voyage
  userId      Int       // Référence vers l'utilisateur
  countryId   Int       // Référence vers le pays
  user        User      @relation(fields: [userId], references: [id])
  country     Country   @relation(fields: [countryId], references: [id])
  color       String?   // Couleur associée au statut
  @@unique([userId, countryId]) // Définit une contrainte unique composite
}

model StatusColor {
  id     Int    @id @default(autoincrement())
  status String @unique // Statut ("visited", "wishlist", etc.)
  color  String         // Couleur associée (en hexadécimal, e.g., #FF0000)
}